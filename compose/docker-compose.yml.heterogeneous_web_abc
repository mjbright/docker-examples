
version: 2
services:
  weba:
    build: ../nodeJS
    expose:
      - 80

  webb:
    build: ../createTinyGo
    command: /webserver
    # dockerfile: Dockerfile.webserver
    expose:
      - 80

  webc:
    image: python
    command: python3 -m http.server --bind 0.0.0.0 80
    expose:
      - 80

  haproxy:
    image: haproxy
    volumes:
     - ./haproxy:/usr/local/etc/haproxy/
    links:
     - weba
     - webb
     - webc
    ports:
     - "80:80"
     - "70:70"
    expose:
     - "80"
     - "70"


